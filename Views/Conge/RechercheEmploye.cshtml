                    <select class="form-control rounded-2" name="IdDiplome" id="conge" required>
                      <option value="">Autre</option>
                      <option value="">Congé partimonial</option>
                      <option value="" selected="selected">Congé simple</option>
                      <option value="">Congé matrimonial</option>
                    </select>
