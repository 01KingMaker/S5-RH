@Html.Partial("CandidatureOption")

@using S5_RH.Models.bdd.orm
@{
    List<Diplome> dip = (List<Diplome>) ViewData["Diplome"];
    List<Experience> e= (List<Experience>) ViewData["Experience"];
    List<Sexe> s=(List<Sexe>) ViewData["Sexe"];
    List<SituationMatrimoniale> situationMatrimoniales = (List<SituationMatrimoniale>) ViewData["Situation"];
    Annonce annonce = (Annonce)ViewData["annonce"];
    List<Poste> postes = (List<Poste>) ViewData["Poste"];
}
<br/>
<br/>
<div class="container">
    <form action="/Candidature/Questionnaire/" method="post">
        @Html.ValidationSummary()
            <h1>Details candidature</h1>
        <div class="row" style="padding-top: 5%; padding-bottom: 5%;">
            <div class="col-6 border-1">
                <input type="hidden" name="IdAnnonce" value="@annonce.IdAnnoce">
                <div class="form-floating mb-3">
                    <label for="Nom">Nom</label>
                    <input type="text" class="form-control rounded-0" id="Nom" name="Nom" required="">
                </div>
                <div class="forgm-floating mb-3">
                    <label for="prenom">Prenom</label>
                    <input type="text" class="form-control rounded-0" id="prenom" name="Prenom" required>
                </div>
                <div class="form-floating mb-3">
                    <label for="dateDeNaissance">Date de naissance</label>
                    <input type="date" name="DateDeNaissance" class="form-control rounded-0" id="DateDeNaissance" required>
                </div>
                <div class="form-floating mb-3">
                    <label for="telephone">Téléphone</label>
                    <input type="text" name="Telephone" class="form-control rounded-0" id="telephone">
                </div>
                <div class="form-floating mb-3">
                    <label for="motivation">Motivation (facultatif)</label>
                    <textarea name="Motivation" class="form-control rounded-0" id="motivation" style="height: 190px;" required>
                        
                    </textarea>
                </div>
                <div class="form-floating mb-3">
                    <input type="file" class="form-control rounded-0" name="Photo" id="photoRecente" >
                </div>
            </div>
            <div class="col-6 border-1">
                <div class="form-floating mb-3">
                    <label for="diplome">Diplôme</label>
                    <select class="form-control rounded-0" name="IdDiplome" id="diplome" required>
                        @foreach (var d in dip)
                        {
                            <option value="@d.IdDiplome">@d.Details</option>
                        }
                    </select>
                </div>
                <div class="form-floating mb-3">
                    <label for="experience">Expérience</label>
                    <select class="form-control rounded-0" name="IdExperience" name="IdExperience" id="experience" required>
                        @foreach (var d in e)
                        {
                            <option value="@d.IdExperience">@d.Details</option>
                        }
                    </select>
                </div>

                <div class="form-floating mb-3">
                    <label for="sexe">Sexe</label>
                    <select class="form-control rounded-0" name="IdSexe" id="sexe" required>
                        @foreach (var d in s)
                        {
                            <option value="@d.IdSexe">@d.Details</option>
                        }
                    </select>
                </div>

                <div class="form-floating mb-3">
                    <label for="situationMatrimoniale">Situation matrimoniale</label>
                    <select name="IdSituationMatrimoniale" class="form-control rounded-0" id="IdSituationMatrimoniale" required>
                        @foreach (var d in situationMatrimoniales)
                        {
                            <option value="@d.IdSituationMatrimoniale">@d.Details</option>
                        }
                    </select>
                </div>

                <div class="form-floating mb-3">
                    <label for="hobies">Hobies</label>
                    <textarea name="Hobies" class="form-control rounded-0" id="hobies" name="Hobies" style="height: 190px;">
                        
                    </textarea>
                </div>

                <div class="form-floating mb-3">
                    <input type="file" name="Documents[]" class="form-control rounded-0" id="documentDiplome" required>
                </div>
                <div class="form-floating mb-3">
                    <select name="IdPoste" class="form-control rounded-0">
                        @foreach (var p in postes)
                        {
                            <option value='@p.IdPoste'>@p.Details</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-5" style="float: right;">Suivant</button>
            </div>
        </div>
    </form>
</div>
<style>
    textarea{
         height: 190px;
    }
</style>